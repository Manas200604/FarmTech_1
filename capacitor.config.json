{
  "appId": "com.farmtech.app",
  "appName": "FarmTech",
  "webDir": "dist",
  "server": {
    "androidScheme": "https",
    "allowNavigation": [
      "localhost",
      "*.localhost",
      "192.168.*",
      "10.0.*"
    ]
  },
  "plugins": {
    "SplashScreen": {
      "launchShowDuration": 2000,
      "launchAutoHide": true,
      "backgroundColor": "#16a34a",
      "androidSplashResourceName": "splash",
      "androidScaleType": "CENTER_CROP",
      "showSpinner": false,
      "splashFullScreen": true,
      "splashImmersive": true
    },
    "StatusBar": {
      "style": "DARK",
      "backgroundColor": "#16a34a"
    }
  }
}