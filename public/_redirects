# Netlify _redirects file for SPA routing
# This file handles client-side routing for the React application

# API proxy redirects (if needed for external APIs)
# /api/*  https://your-api-domain.com/api/:splat  200

# Handle specific static files and assets
/favicon.ico  /favicon.ico  200
/robots.txt   /robots.txt   200
/manifest.json /manifest.json 200

# Handle static assets in subdirectories
/assets/*     /assets/:splat     200
/images/*     /images/:splat     200
/fonts/*      /fonts/:splat      200

# Handle specific application routes with proper status codes
/login        /index.html        200
/register     /index.html        200
/dashboard    /index.html        200
/farmer       /index.html        200
/admin        /index.html        200
