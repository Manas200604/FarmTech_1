{
  "name": "farmtech",
  "private": true,
  "version": "1.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "cross-env CAPACITOR_PLATFORM=web vite build",
    "build:native": "vite build",
    "lint": "eslint . --ext js,jsx --report-unused-disable-directives --max-warnings 0",
    "preview": "vite preview",
    "db:setup": "node database-setup.js",
    "db:migrate": "node migrate-database.js",
    "db:verify": "node verify-database.js",
    "db:seed": "node seed-database.js",
    "create-admin": "node create-admin.js",
    "verify-admin": "node verify-admin.js",
    "check-admin": "node check-admin-setup.js",
    "init-system": "node initialize-system.js",
    "test-loading": "node final-loading-check.js",
    "db:legacy-verify": "node setup-supabase.js",
    "android:build": "npm run build:native && npx cap sync android",
    "android:dev": "npx cap run android --live-reload",
    "android:run": "npx cap run android",
    "android:sync": "npx cap sync android",
    "android:open": "npx cap open android",
    "cap:build": "npm run build:native && npx cap sync",
    "cap:serve": "npm run build:native && npx cap copy && npx cap run android --livereload",
    "dev:mobile": "vite --host 0.0.0.0 --port 3000",
    "test": "vitest",
    "test:run": "vitest run",
    "test:ui": "vitest --ui",
    "android:build:debug": "node scripts/build-android.js debug",
    "android:build:release": "node scripts/build-android.js release",
    "android:deploy:debug": "node scripts/deploy-android.js debug",
    "android:deploy:release": "node scripts/deploy-android.js release"
  },
  "dependencies": {
    "@capacitor/android": "^7.4.4",
    "@capacitor/app": "^7.1.0",
    "@capacitor/cli": "^7.4.4",
    "@capacitor/core": "^7.4.4",
    "@capacitor/network": "^7.0.2",
    "@capacitor/push-notifications": "^7.0.3",
    "@capacitor/splash-screen": "^7.0.3",
    "@capacitor/status-bar": "^7.0.3",
    "@supabase/supabase-js": "^2.76.1",
    "clsx": "^2.0.0",
    "dotenv": "^17.2.3",
    "lucide-react": "^0.294.0",
    "mongodb": "^6.20.0",
    "qrcode": "^1.5.3",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-hook-form": "^7.48.2",
    "react-hot-toast": "^2.4.1",
    "react-router-dom": "^6.20.1"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@vitejs/plugin-react": "^4.2.1",
    "autoprefixer": "^10.4.16",
    "cross-env": "^7.0.3",
    "eslint": "^8.55.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.5",
    "jsdom": "^27.0.1",
    "postcss": "^8.4.32",
    "tailwindcss": "^3.3.6",
    "terser": "^5.44.0",
    "typescript": "^5.9.3",
    "vite": "^5.0.8",
    "vitest": "^4.0.4"
  }
}
